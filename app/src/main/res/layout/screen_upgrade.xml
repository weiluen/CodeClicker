<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_blue" >


    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/upgradesMenu"
        android:src="@drawable/upgrades_bar"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/exit_button"
        android:layout_row="1"
        android:layout_column="21"
        android:src="@drawable/exit_button_shadow_3"
        android:layout_marginRight="32dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:onClick="exitClick"/>

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/horizontalScrollView"
        android:layout_below="@+id/upgradesMenu"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/floppy_disk_button"
        android:src="@drawable/floppy_disk_button"
        android:layout_toEndOf="@+id/horizontalScrollView"
        android:layout_below="@+id/horizontalScrollView"
        android:layout_toLeftOf="@+id/college_dropout_button"
        android:layout_toStartOf="@+id/college_dropout_button" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/code_book_button"
        android:src="@drawable/code_book_button"
        android:layout_toEndOf="@+id/horizontalScrollView"
        android:layout_toStartOf="@+id/college_dropout_button"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/college_dropout_button" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/piggy_bank_button"
        android:layout_marginTop="40dp"
        android:src="@drawable/piggy_bank_button"
        android:layout_toEndOf="@+id/horizontalScrollView"
        android:layout_below="@+id/code_book_button"
        android:layout_alignRight="@+id/code_book_button"
        android:layout_alignEnd="@+id/code_book_button" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/college_dropout_button"
        android:cropToPadding="false"
        android:src="@drawable/college_dropout_button"
        android:layout_toStartOf="@+id/exit_button"
        android:layout_below="@+id/upgradesMenu"
        android:layout_alignRight="@+id/exit_button"
        android:layout_alignEnd="@+id/exit_button" />



</RelativeLayout>
